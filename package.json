{
  "name": "react-seed",
  "description": "A basis for building SPAs in React.",
  "version": "1.0.0",
  "author": "Oliver Turner <oliver.turner@codedsignal.co.uk>",
  "dependencies": {
    "immutable": "^3.8.1",
    "react": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-hot-loader": "^3.0.0-beta.2",
    "redux": "^3.5.2",
    "redux-thunk": "^2.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.2",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-import-resolver-webpack": "^0.2.4",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "expect": "^1.20.0",
    "expect-jsx": "^2.5.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "gh-pages": "^0.11.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.16.1",
    "isparta": "^4.0.0",
    "isparta-instrumenter-loader": "^1.0.0",
    "json-loader": "^0.5.4",
    "karma": "^0.13.22",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.3",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.4.5",
    "offline-plugin": "^2.2.1",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss-apply": "^0.2.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-focus": "^1.0.0",
    "postcss-loader": "^0.9.1",
    "postcss-nested": "^1.0.0",
    "postcss-reporter": "^1.3.3",
    "postcss-simple-vars": "^1.2.0",
    "react-addons-test-utils": "^15.0.2",
    "redux-devtools": "^3.2.0",
    "sanitize.css": "^3.3.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.3.0",
    "stylelint-config-standard": "^6.0.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "license": "MIT",
  "main": "src/index.js",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "env": {
      "production": {
        "presets": [
          "react-optimize"
        ]
      }
    },
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "rules": {
      "arrow-body-style": [
        2,
        "as-needed"
      ],
      "brace-style": [
        2,
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "comma-dangle": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "key-spacing": [
        2,
        {
          "align": "value"
        }
      ],
      "dot-notation": 0,
      "max-len": 0,
      "no-console": 1,
      "no-multi-spaces": 0,
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "prefer-template": 2,
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "import/no-unresolved": 2,
      "jsx-a11y/href-no-hash": 2,
      "jsx-a11y/label-has-for": 2,
      "jsx-a11y/mouse-events-have-key-events": 2,
      "jsx-a11y/role-has-required-aria-props": 2,
      "jsx-a11y/role-supports-aria-props": 2,
      "jsx-a11y/aria-props": 2
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./config/webpack/webpack.dev.babel.js"
        }
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "string-quotes": "single",
      "font-family-name-quotes": "single-where-recommended",
      "indentation": 2
    }
  },
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.prod.babel.js",
    "build:gh": "npm run build && node ./build-gh-pages.js && rm -r ./dist",
    "karma": "cross-env NODE_ENV=test karma start",
    "lint:js": "eslint ./src ./config",
    "start": "webpack-dev-server --config config/webpack/webpack.dev.babel.js --hot --inline",
    "test": "npm run karma config/karma/karma.conf.babel.js -- --single-run",
    "test:ci": "npm run karma config/karma/karma.ci.conf.js -- --single-run",
    "test:coverage": "npm run karma config/karma/karma/.coverage.conf.js -- --single-run",
    "test:watch": "npm run karma config/karma/karma.conf.js"
  }
}
